{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "ng-add": {
      "description": "Do all the tasks",
      "factory": "./paddls-schematics/complete-install#ngAdd"
    },
    "add-paddls": {
      "description": "Add paddls dependencies.",
      "factory": "./paddls-schematics/add-paddls#addDependencies",
      "schema": "./paddls-schematics/schemas/add-paddls.schema.json"
    },
    "add-modules": {
      "description": "Add core, shared and system folders.",
      "factory": "./paddls-schematics/add-modules#folderModules",
      "schema": "./paddls-schematics/schemas/add-modules.schema.json"
    },
    "add-modules-files": {
      "description": "Add module.ts files.",
      "factory": "./paddls-schematics/create-modules-files#addModulesFiles",
      "schema": "./paddls-schematics/schemas/create-modules-files.schema.json"
    },
    "replace-app-module-file": {
      "description": "Replace the app module file with the imports of paddls libraries",
      "factory": "./paddls-schematics/replace-app-module#replaceAppModuleFile",
      "schema": "./paddls-schematics/schemas/replace-app-module.schema.json"
    },
    "replace-environment": {
      "description": "Replace the environment.ts file with firebase configuration",
      "factory": "./paddls-schematics/replace-environment#replaceEnvironment",
      "schema": "./paddls-schematics/schemas/replace-environment.schema.json"
    },
    "v": {
      "description": "Get the Angular Version",
      "factory": "./paddls-schematics/angular-version#getAngularVersion"
    },
    "add-ngx": {
      "description": "Install the library @paddls/ngx-repository",
      "factory": "./paddls-schematics/add-paddls#addNgxRepo",
      "schema": "./paddls-schematics/schemas/version-paddls.json"
    },
    "add-ngx-http": {
      "description": "Install the library @paddls/ngx-http-repository",
      "factory": "./paddls-schematics/add-paddls#addNgxHttp",
      "schema": "./paddls-schematics/schemas/version-paddls.json"
    },
    "add-ngx-firestore": {
      "description": "Install the library @paddls/ngx-firestore-repository",
      "factory": "./paddls-schematics/add-paddls#addNgxFirestore",
      "schema": "./paddls-schematics/schemas/version-paddls.json"
    },
    "add-ngx-common": {
      "description": "Install the library @paddls/ngx-common",
      "factory": "./paddls-schematics/add-paddls#addNgxCommon",
      "schema": "./paddls-schematics/schemas/version-paddls.json"
    },
    "add-ngx-serializer": {
      "description": "Install the library @paddls/ngx-serializer",
      "factory": "./paddls-schematics/add-paddls#addNgxSerializer",
      "schema": "./paddls-schematics/schemas/version-paddls.json"
    },
    "add-rxjs-common": {
      "description": "Install the library @paddls/rxjs-common",
      "factory": "./paddls-schematics/add-paddls#addRxjsCommon",
      "schema": "./paddls-schematics/schemas/version-paddls.json"
    },
    "add-ts-serializer": {
      "description": "Install the library @paddls/ts-serializer",
      "factory": "./paddls-schematics/add-paddls#addTsSerializer",
      "schema": "./paddls-schematics/schemas/version-paddls.json"
    }
  }
}